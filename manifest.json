{
    "manifest_version": 3,
    "name": "CodeMentor AI",
    "version": "1.0",
    "description": "AI-powered code review tool for LeetCode.",
    "permissions": ["activeTab", "scripting", "storage"],

    "content_scripts": [
      {
        "matches": ["*://leetcode.com/problems/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icon.png"
      }
    }
  }
  